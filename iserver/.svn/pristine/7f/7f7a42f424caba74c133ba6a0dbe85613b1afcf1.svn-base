<%@ page language="java" contentType="text/html; charset=utf-8"
    pageEncoding="utf-8"%>
<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
<title>数据字典管理</title>
<%@include file="/link/link.jsp" %>
</head>
<body class="easyui-layout">
<div data-options="region:'center',title:'数据字典列表',iconCls:'icon-ok'">
		<table id="dictid" data-options="toolbar:'#toolbar',loadMsg:'正在加载数据...',">
			<thead>
				<tr>
					<th data-options="field:'id' , hidden:'true'">id</th>
					<th data-options="field:'name',align:'center'" width="150">名称</th>
					<th data-options="field:'code',align:'center'" width="150">标识</th>
					<th data-options="field:'remark',align:'center'" width="150">备注</th>
					<th data-options="field:'createAt',align:'center'" width="150">创建时间</th>
				</tr>
			</thead>
		</table>
		<div id="toolbar" style="padding:5px;height:auto">
			<div style="padding:5px;">
				<font>数据字典名称：</font>
				<input id="dn" name="name" class="easyui-validatebox" type="text" style="width:200px;"/>
				<a href="javascript:void(0);" class="easyui-linkbutton" iconCls="icon-search" onclick="findDict()">查询</a>
			</div>
			<div>
				<c:forEach items="${buttonList}" var="button">
					<a href="javascript:void(0);" class="easyui-linkbutton" iconCls="icon-${button.icon}" plain="true" onclick="${button.function}">${button.name}</a>
				</c:forEach>
			</div>
		</div>
</div>
	<!--数据字典窗口 -->
	<div id="dictWindow" class="easyui-window" title="数据字典信息" data-options="modal:true,minimizable:false,closed:true,iconCls:'icon-edit'" style="width:400px;height:320px;padding:10px;">
			<div class="easyui-layout" data-options="fit:true">
				<div data-options="region:'center'" style="padding:10px;">
				<form id="form" method="post">
					<table align="center" width="100%">
			    		<tr>
			    			<td>字典名称：</td>
			    			<td>
			    			<input id="name" name="dictName" class="easyui-validatebox" type="text" data-options="required:false"
			    					 style="width:150px;"/>
			    			</td>
			    		</tr>
			    		<tr>
			    			<td>数据字典代码：</td>
			    			<td>
			    			<input id="code" name="code" class="easyui-validatebox" type="text" data-options="required:false"
			    					 style="width:150px;"/>
			    			</td>
			    		</tr>
			    		<tr>
			    			<td>备注：</td>
			    			<td>
			    				<textarea id="remark" name="remark" style="width:150px;" class="easyui-validatebox"></textarea>
			    			</td>
			    		</tr>
				    </table>
				    </form>
				 </div>
				 <div data-options="region:'south',border:false" style="text-align:right;padding:5px 0 0;">
					<a href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-save'" onclick="saveDict()">保存</a>
					<a href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-cancel'" onclick="$('#dictWindow').window('close')">取消</a>
				</div>
			</div>
	    
	</div>
</body>
<script type="text/javascript">
$(function(){
	findDict();
});
//打开新增数据字典窗口
function showdictWindow(){
	$('#form').form('clear');
	$("#dictWindow").window("open");
}

//保存数据字典
function saveDict(){
	var name = $("#name").val();
	if(name == ""){
		$.messager.alert("系统提示","请填写数据字典名称","warning");
		return;
	}
	var code = $("#code").val();
	if(code == ""){
		$.messager.alert("系统提示","请填写数据字典代码","warning");
		return;
	}
	var options ={
			url:"${app}/admin/json/saveDict",
			success : function(data) {
				if(checkData(data)){
					$("#dictWindow").window('close');
					$("#rn").val('');
					findDict();
				}
			}
		};
	$("#form").ajaxSubmit(options);		
	//清除选中行
	$('#dictid').datagrid('clearSelections');
}
//删除数据字典
function deleteDict(){
	var record = $('#dictid').datagrid('getSelected');
	if(record==null){
		$.messager.alert("系统提示","请选择记录!","warning");
		return;
	}
	$.messager.confirm('系统提示', '确定要删除吗?', function(r){
		if (r){
			$.getJSON("${app}/admin/json/deleteDict?id="+record.id,function(data){
				if(checkData(data)){
					findDict();
				}
			});			
		}
	});
	$('#dictid').datagrid('clearSelections');
}

//查询所属字典项
function findItem(){
	var record = $('#dictid').datagrid('getSelected');
	if(record==null){
		$.messager.alert("系统提示","请选择记录!","warning");
		return;
	}
	window.location.href="${app}/admin/dictitem?dictId="+record.id;
}

//查询数据字典
function findDict(){
	var name = $("#dn").val();
	 $('#dictid').datagrid({
	        height: 'auto',  
	        nowrap: false,  
	        striped: true,  
	        border: true,  
	        collapsible:false,//是否可折叠的  
	        fit: true,//自动大小  
	        url:'${app}/admin/json/findDictList?name='+name,  
	        remoteSort:false, 
	        idField:'id',  
	        singleSelect : true,//是否单选  
			selectOnCheck: true,
			checkOnSelect: true,
			fitColumns: true, 
	        pagination:true,//分页控件  
	        pageSize:30,//设置分页默认条数
		    pageList: [30,50,100,150], 
	        rownumbers:true,//行号  
	        onLoadError:function(){
	        	$.messager.alert("系统提示","加载数据失败！","warning");
			}
	    });  
	 	//设置分页控件  
	    var p = $('#dictid').datagrid('getPager');  
	    $(p).pagination({  
	        beforePageText: '第',//页数文本框前显示的汉字  
	        afterPageText: '页    共 {pages} 页',  
	        displayMsg: '当前显示 {from} - {to} 条记录   共 {total} 条记录',  
	    });  
	    $('#dictid').datagrid('clearSelections');
}
</script>
</html>