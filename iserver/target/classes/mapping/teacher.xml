<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.ichazuo.dao.TeacherDao">
	<select id="findTeacherList" parameterType="java.util.Map"
		resultType="cn.ichazuo.model.app.TeacherInfo">
		select id,name,title,avatar,price,info
		from t_teacher
		where status = 1
		and type = #{type}
		<!-- limit #{page},#{pageCount} -->
	</select>
	<!-- 查询老师数量 -->
	<select id="findTeacherCount" parameterType="java.util.Map"
		resultType="java.lang.Long">
		select count(*) from t_teacher
		where status = 1 and type =
		#{type}
	</select>
	<!-- 查询老师信息 -->
	<select id="findTeacherText" parameterType="java.lang.Long"
		resultType="cn.ichazuo.model.app.TeacherContent">
		select content,id,create_at as createAt,price,title from
		t_teacher where id = #{id}
	</select>

	<!-- 保存邀请信息 -->
	<insert id="saveTeacherInvite" parameterType="cn.ichazuo.model.table.TeacherInvite">
		insert into
		t_teacher_invite(name,content,your_name,your_phone,your_weixin,create_at)
		values(#{name},#{content},#{yourName},#{yourPhone},#{yourWeixin},now())
	</insert>
</mapper>